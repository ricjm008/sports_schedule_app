<div class="container mx-auto mt-8 bg-gray-100 rounded-lg">


  <div class="lg:flex lg:items-center lg:justify-between ">
    <div class="flex-1 min-w-0 pl-3 pt-3">
      <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:text-3xl sm:truncate">
        Hi {{user.name}}
      </h2>
      <h3 class="text-2xl font-bold leading-7 text-gray-900 sm:text-3xl sm:truncate justify-center text-center">Your
        Dashboard</h3>
    </div>
  </div>

  <div class="flex flex-wrap justify-center  p-7">
    <h2 class="w-full border-t-2 pt-4 my-4 text-center text-xl">Results</h2>
    <div class="flex flex-wrap justify-center w-full">
      {{#each pastGames}}
      {{> game}}
      {{/each}}
    </div>

    <h2 class="w-full border-t-2 pt-4 my-2 text-center text-xl">Upcoming games</h2>
    <div class="flex flex-wrap justify-center w-full">
      {{#each upcomingGames}}
      {{> game}}
      {{/each}}
    </div>
  </div>
</div>